<div class="container">
  <h1><%= @list.name %></h1>
  <p>
    <%= link_to list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Delete #{@list.name}?"}, class:"text-black" do %>
        Delete this list <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </p>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %>
          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title}?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
      </li>
    <% end %>
  </ul>
  <p><strong>Create a new bookmark</strong></p>
  <%= render "lists/bookmark_form", list: @list, bookmark: @bookmark %>
</div>
