<%= simple_form_for [list, bookmark] do |f| %>
  <%= f.association :movie,
                    collection: Movie.order(:title),
                    prompt: "Choose a movie from the list",
                    label_method: :title,
                    include_blank: false,
                    input_html: { class: 'form-control' } %>
  <%= f.input :comment %>
  <%= f.submit "Create!", class: "btn btn-light" %>
<% end %>
